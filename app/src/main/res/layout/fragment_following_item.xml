<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x180"
    android:gravity="center_vertical"
    android:background="@drawable/followitem_border"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150">

        <ImageView
            android:id="@+id/following_img"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y140"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/x20"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_round" />
        <TextView
            android:id="@+id/following_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x20"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/x40"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/follow_round_black"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x300">
            <TextView
                android:id="@+id/following_btn"
                android:padding="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Following"
                android:textSize="@dimen/x38"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
